<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_multi_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_multi_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_multi_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_multi_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_multi_title" />

    <Button
        android:id="@+id/dialog_button_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:minHeight="40dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/dialog_multi_message"
        app:layout_constraintTop_toBottomOf="@+id/dialog_multi_message" />

    <Button
        android:id="@+id/dialog_button_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:minHeight="40dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/dialog_button_positive"
        app:layout_constraintTop_toTopOf="@+id/dialog_button_positive" />
</android.support.constraint.ConstraintLayout>