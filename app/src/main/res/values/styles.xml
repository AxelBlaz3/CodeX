<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/kinda_teal</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:typeface">serif</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:typeface">serif</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/kinda_teal</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">@color/kinda_teal</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="ToolbarFont" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="ChangelogTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/kinda_teal</item>
        <item name="android:textColorPrimary">@color/kinda_teal</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/kinda_teal</item>
        <item name="colorControlHighlight">#E0E0E0</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
